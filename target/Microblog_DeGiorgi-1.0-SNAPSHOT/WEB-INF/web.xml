<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>registrazione</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.registrazione</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createPost</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.createPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createComment</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.createComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewPost</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.viewPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlloUtente</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.controlloUtente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlloCommento</servlet-name>
        <servlet-class>com.mycompany.microblog_degiorgi.servlet.controlloCommento</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrazione</servlet-name>
        <url-pattern>/registrazione</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createPost</servlet-name>
        <url-pattern>/createPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createComment</servlet-name>
        <url-pattern>/createComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewPost</servlet-name>
        <url-pattern>/viewPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlloUtente</servlet-name>
        <url-pattern>/controlloUtente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlloCommento</servlet-name>
        <url-pattern>/controlloCommento</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
</web-app>
